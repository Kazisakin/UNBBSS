{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "types": ["node"],

    // Other Outputs
    "sourceMap": true,

    // Type Declarations
    "declaration": false,

    // Strictness
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
